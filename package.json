    "lint:eslint": "eslint --cache --max-warnings 0  \"{packages,examples,build}/**/*.{vue,js,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"packages/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
