    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.2",
    "vue": "^3.2.36",
    "eslint": "^8.18.0",
    "eslint-define-config": "^1.5.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "@vue/eslint-config-prettier": "^7.0.0",
